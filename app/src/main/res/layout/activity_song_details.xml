<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arnoh.gospelapp.SongDetails">

    <TextView
        android:id="@+id/tvlenghth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="Music lenth" />

    <TextView
        android:id="@+id/tvsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvlenghth"
        android:layout_alignRight="@+id/tvlenghth"
        android:layout_below="@+id/pic"
        android:layout_marginTop="85dp"
        android:text="Music size" />

    <Button
        android:id="@+id/btDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsize"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="download" />

    <ImageView
        android:layout_marginTop="20sp"
        android:id="@+id/pic"
        android:layout_width="300sp"
        android:layout_height="200sp"
        android:layout_alignLeft="@+id/tvsize"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvsize"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:maxHeight="200sp"
        app:srcCompat="@drawable/arnoh"
        android:contentDescription="TODO"/>


</RelativeLayout>
